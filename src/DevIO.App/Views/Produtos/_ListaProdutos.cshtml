@model IEnumerable<DevIO.App.ViewModels.ProdutoViewModel>

<table class="table">
    <thead class="table-dark">
        <tr>

            <th>

            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/imagens/@item.Imagem" alt="@item.Imagem" style=" width:70px; height:100px;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Valor.ToString("C"))*@
                @item.Valor.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            
            <td class="text-lg-end">
             @*Como vamos usar essas funcionalidades fora da pasta das view Produtos, precisaremos informar de qual 
             controller ela pertence para que na hora que a action for chamada ela seja redirecionada para a controle
             correta.*@
             <a class="btn btn-info" asp-controller="Produtos" asp-action="Details" asp-route-id="@item.Id"><span class=" fa fa-search"></span></a> 
             <a disable-by-claim-name="Produto" disable-by-claim-value="Editar" class="btn btn-warning" asp-controller="Produtos"asp-action="Edit" asp-route-id="@item.Id"><span class=" fa fa-pencil-alt"></span></a>
             <a supress-by-claim-name="Produto" supress-by-claim-value="Excluir" class="btn btn-danger" asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id"><span class=" fa fa-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
